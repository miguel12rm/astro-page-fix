---
import Logo from "../img/logo.jpeg";

---
<header id="header" class="header-principal">
    <img class="imagen-header" src={Logo.src} alt=""/>
    <div class="nav">
        <ul class="link">
            <li>
                <a href="/">Inicio</a>
            </li>
            <li>
                <a href="/planes_servicios">Planes y Servicion</a>
            </li>
            <li>
                <a href="/cobertura">Cobertura</a>
            </li>
            <li>
                <a href="/quienes_somos">Quienes Somos</a>
            </li>
            <li>
                <a href="/contacto">Contacto</a>
            </li>
            <li>
                <a href="/login" id="btn-entrar">Mi FIX</a>
            </li>
        </ul>
    </div>
</header>
<script src="../components/JavaScript/scroll"></script>
<style>
    .header-principal {
        padding: 2px 40px;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        background-color: hsl(0, 0%, 100%);
        position: relative;
        top: 0;
        left: 0;
        width: 100%;
        height: 100px;
        z-index: 100;
        box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.5);
    }
    .header-principal.sticky {
        position: sticky;
        top: 0;
    }
    .link{
        margin: 35px 0;
        padding: 10px;
        font-size: 15px;
        font-weight: bold;
        list-style: none;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #bd99df;
        border-radius: 20px;
    }
    .link li{
        margin: 0 20px;
        padding: 0;
    }
    .link a{
        text-decoration: none;
        color: #454646;
    }
    .imagen-header {
        height: 70px;
    }

    #btn-entrar {
        background-color: #4CAF50;
        color: white;
        border: none; /* Elimina el borde del botón */
        padding: 5px 15px; /* Espaciado interno del botón */
        text-align: center; /* Alineación del texto en el centro del botón */
        text-decoration: none; /* Elimina la subrayado del texto del botón */
        display: inline-block; /* Hace que el botón sea un elemento en línea */
        font-size: 16px; /* Tamaño del texto del botón */
        cursor: pointer; /* Cambia el cursor al pasar el mouse sobre el botón */
        border-radius: 25px; /* Bordes redondeados del botón */
    }

    #btn-entrar:hover {
        background-color: #45a049; /* Cambia el color de fondo del botón al pasar el mouse sobre él */
    }

    /* Estilos para pantallas pequeñas */
    @media (max-width: 1020px) {
        .menu {
            display: block;
        }
    }
</style>