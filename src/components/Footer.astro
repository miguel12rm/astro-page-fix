---
import Logo from "../img/logo.jpeg";
import Facebook from "../img/facebook.png";
import Twitter from "../img/twitter.png";
import Instagram from "../img/instagram.png";
import Linkedin from "../img/linkeding.png";
---

<footer id="footer">
    <div class="content-footer">
        <div class="content-logo">
            <img src={Logo} alt="">
        </div>
        <div class="content-contacto">
            <div class="content-redes">
                <ul class="icons">
                    <li>
                        <a href="https://www.facebook.com" class="icon-item">
                            <img src={Facebook} alt="">
                        </a>
                    </li>
                    <li>
                        <a href="https://www.twitter.com" class="icon-item">
                            <img src={Twitter} alt="">
                        </a>
                    </li>
                    <li>
                        <a href="https://www.instagram.com" class="icon-item">
                            <img src={Instagram} alt="">
                        </a>
                    </li>
                    <li>
                        <a href="https://www.linkedin.com" class="icon-item">
                            <img src={Linkedin} alt="">
                        </a>
                    </li>
                </ul>
            </div>
            <div class="content-telefono">
                <div class="telefono">
                    <h3>Direcci√≥n</h3>
                    <p>Av. La Cultura 123</p>
                </div>
                <div class="telefono">
                    <h3>Telefono</h3>
                    <p>+51 954 879 712</p>
                </div>
                <div class="telefono">
                    <h3>Email</h3>
                    <a href="#">informacion@gmail.com</a>
                </div>
            </div>
        </div>
    </div>
    <br>
    <div class="content-copyright">
        <ul class="copyright">
            <li>
                <p>&copy; FIX Company | Todos los Derechos Reservados</p>
            </li>
        </ul>
    </div>
</footer>
<style>
    /* pie de pagina */

	#footer {
		background: #29283b;
		padding: 20px 0 30px 0;
	}

    .content-footer{
        display: flex;
        justify-content: space-around;
        align-items: center;
    }

    .content-logo img{
        height: 150px;
        border-radius: 10px 60px;
    }

    /* CONTACTO */
    .content-contacto{
        width: 50%;
    }
    /* REDES */
    .content-redes{
        margin-bottom: 10px;
        padding-bottom: 10px;
        display: flex;
        justify-content: center;
        border-bottom: 2px solid black;
    }
    .icons{
        margin: 0;
        padding: 7px;
        width: 50%;
        display: flex;
        justify-content: space-around;
    }
    .icon-item img{
        height: 38px;
    }
    /* TELEFONO */
    .content-telefono{
        display: flex;
        justify-content: space-around;
        
    }
    .telefono{
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .telefono h3, .telefono p, .telefono a{
        color: white;
        text-decoration: none;
    }

    .icons li{
        list-style: none;
    }

    .copyright{
        margin: 20px 0 0 0;
    }

    .copyright p{
        margin: 0;
        font-size: 15px;
    }

    #footer .copyright {
        color: rgba(255, 255, 255, 0.5);
        font-size: 0.8em;
        line-height: 1em;
        padding: 0;
        text-align: center;
    }

			#footer .copyright li {
				border-left: solid 1px rgba(255, 255, 255, 0.3);
				display: inline-block;
				list-style: none;
				margin-left: 1.5em;
				padding-left: 1.5em;
			}

				#footer .copyright li:first-child {
					border-left: 0;
					margin-left: 0;
					padding-left: 0;
				}

				#footer .copyright li a {
					color: inherit;
				}
</style>